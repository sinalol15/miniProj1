CREATE TABLE TB_MEMBER (
	mid varchar2(50) NOT NULL,
	mname varchar2(50) NOT NULL,
	mpassword varchar2(50) NOT NULL,
	mage number(3,0) NOT NULL,
	memail varchar2(50) NOT NULL,
  CONSTRAINT "TB_MEMBER_PK" PRIMARY KEY ("MID")
)

CREATE TABLE TB_BOARD(
	tbno number NOT NULL,
	tbtitle varchar2(100) NOT NULL,
	tbcontent clob NOT NULL,
	tbwriter varchar2(50) NOT NULL,
	tbdate DATE DEFAULT sysdate,
  TBVIEWCOUNT NUMBER, 
	TMID VARCHAR2(50) NOT NULL, 
	CONSTRAINT "TB_BOARD_PK" PRIMARY KEY ("TBNO")
)

CREATE TABLE TB_HABBIT(
	hnumber NUMBER NOT NULL,
	hname varchar2(50) NOT NULL,
  CONSTRAINT "TB_HABBIT_PK" PRIMARY KEY ("HNUMBER")
)

CREATE TABLE TB_MHABBIT(
	mhid varchar2(50) NOT NULL,
	mhnumber number NOT NULL,
  CONSTRAINT "TB_MHABBIT_TB_MEMBER_FK" FOREIGN KEY ("MHID")
  REFERENCES "BITUSER"."TB_MEMBER" ("MID") ON DELETE CASCADE ENABLE, 
	CONSTRAINT "TB_MHABBIT_TB_HABBIT_FK" FOREIGN KEY ("MHNUMBER")
	REFERENCES "BITUSER"."TB_HABBIT" ("HNUMBER") ON DELETE CASCADE ENABLE
)
